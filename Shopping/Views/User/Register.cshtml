    void function(signup_form){
        function check_input(){
            var input_login_name = $.trim($('#input_login_name').val());
            var input_login_password = $.trim($('#input_login_password').val());
            var input_psw_confirm = $.trim($('#input_psw_confirm').val());
            var img_vcode = $.trim($('#img_vcode').val());
            var input_vcode = $.trim($('#input_vcode').val());
            var usernameRegExp = /^[a-zA-Z0-9]{6,}$/;
            //验证用户名
            if (input_login_name == '' || !usernameRegExp.test(input_login_name)) {
                $('#input_login_name').focus().siblings('.error').remove().end().after('<div class="error error-normal">用户名至少为6位</div>');
                $('.imgcode').click();
                //组织表单提交
                return false;
            }else{
                $('#input_login_name').siblings('.error').remove() ;
            }
            //验证密码：
            if(input_login_password==''){
                $('#input_login_password').focus().siblings('.error').remove().end().after('<div class="error error-normal">请输入密码！</div>');
                $('.imgcode').click();
                return false;
            }else{
                $('#input_login_password').siblings('.error').remove() ;
            }
            //验证密码是否小于6位
            if(input_login_password.length<6){
                $('#input_login_password').focus().siblings('.error').remove().end().after('<div class="error error-normal">密码长度不能小于6位！</div>');
                $('.imgcode').click();
                return false;
            }else{
                $('#input_login_password').siblings('.error').remove() ;
            }
            //验证确认密码是否为空
            if(input_psw_confirm==''){
                $('#input_psw_confirm').focus().siblings('.error').remove().end().after('<div class="error error-normal">请再次输入密码！</div>');
                $('.imgcode').click();
                return false;
            }else{
                $('#input_psw_confirm').siblings('.error').remove() ;
            }

            //验证确认秘密和密码是否相同
            if(input_psw_confirm!=input_login_password){
                $('#input_psw_confirm').focus().siblings('.error').remove().end().after('<div class="error error-normal">确认密码不一致！</div>');
                $('.imgcode').click();
                return false;
            }else{
                $('#input_psw_confirm').siblings('.error').remove() ;
            }
        }

        //注册表单表单提交时
        signup_form.on('submit',function(e){
           e.stopPropagation();         //阻止事件冒泡
            check_input();                  //调用验证表单的函数
            signup_form.find('button[type=submit]').button('loading');
            $.post('/User/AjaxRegister', signup_form.serialize(), function (re) {
                //re是ajax响应的数据

                console.log(re);

                if(re.Result==1){
                   //错误
                    if(re.ErrorMessage=='验证码错误'){
                        $('#vcode').focus().siblings('.error').remove().end().after('<div class="error">图形验证码不正确!</div>');
                      $('.imgcode').click();
                    }else{
                        $('#vcode').siblings('.error').remove();
                    }
                    if (re.ErrorMessage == '用户名已被使用') {
                      $('#input_login_name').focus().siblings('.error').remove().end().after('<div class="error">该用户名已经被注册</div>');
                      $('.imgcode').click();
                    }else{
                          $('#input_login_name').siblings('.error').remove() ;
                    }
                }
                //正确
                if(re.Result==0){
                   $('#input_vcode').siblings('.error').remove() ;
                    //location.href = re.redirect;

                    //用户名没有重复，并且验证码正确

                    //提交表单，写入数据库
                   if (check_input() != false)
                   {
                       $.post('/User/Register', signup_form.serialize(), function () {
                           window.location = '/User/Login';
                       });
                   }
                }
                signup_form.find('button[type=submit]').button('reset');
            },'json');
            return false;
        });

        
     signup_form.find('.mobile-vcode button').on('click',function(e){
