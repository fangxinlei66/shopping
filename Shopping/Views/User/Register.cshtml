            return false;
          }else{
            var btn = $(this),
                    new_password= $.trim($('#input_login_password').val()),
                    new_password1= $.trim($('#input_psw_confirm').val()),
                    account= $.trim($('#input_login_name').val()),
                     mobile = /^1[3|4|5|7|8|6|9]\d{9}$/;
